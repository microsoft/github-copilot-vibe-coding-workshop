{
  "inputs": [
    {
      "type": "promptString",
      "id": "figma-api-key",
      "description": "MCP server access key for Figma",
      "password": true
    }
  ],
  "servers": {
    "Framelink Figma MCP": {
      "command": "npx",
      "args": [
        "-y",
        "figma-developer-mcp",
        "--figma-api-key=${inputs.figma-api-key}",
        "--stdio"
      ],
      "type": "stdio",
      "env": {}
    }
  }
}