@inject NavigationManager Navigation

<nav class="flex flex-col items-center justify-center w-20 h-screen bg-white dark:bg-gray-900 border-r border-gray-200 fixed top-0 left-0 gap-8 py-4 z-40">
    <NavItem Href="/" IsActive="@IsCurrentPage("/")">
        <HomeIcon />
    </NavItem>
    <NavItem Href="/search" IsActive="@IsCurrentPage("/search")">
        <SearchIcon />
    </NavItem>
    <NavItem Href="/profile" IsActive="@IsCurrentPage("/profile")">
        <PersonIcon />
    </NavItem>
</nav>

@code {
    private bool IsCurrentPage(string path)
    {
        var currentPath = new Uri(Navigation.Uri).AbsolutePath;
        return string.Equals(currentPath, path, StringComparison.OrdinalIgnoreCase);
    }
}
